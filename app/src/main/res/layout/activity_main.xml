<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="2dp">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@color/light_grey"
        android:padding="10dp"
        android:textSize="48sp"
        android:text="@string/calc_text"
        android:gravity="end|bottom"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
    <Button
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:id="@+id/btn_7"
        android:text="7"
        android:layout_weight="1"
        android:layout_margin="2dp"
        android:onClick="onDigit"
        />
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/btn_8"
            android:text="8"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:onClick="onDigit"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/btn_9"
            android:text="9"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:onClick="onDigit"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/btn_div"
            android:text="/"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:onClick="onDigit"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/btn_4"
            android:text="4"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:onClick="onDigit"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/btn_5"
            android:text="5"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:onClick="onDigit"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/btn_6"
            android:text="6"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:onClick="onDigit"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/btn_mult"
            android:text="*"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:onClick="onDigit"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/btn_1"
            android:text="1"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:onClick="onDigit"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/btn_2"
            android:text="2"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:onClick="onDigit"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/btn_3"
            android:text="3"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:onClick="onDigit"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/btn_sub"
            android:text="-"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:onClick="onDigit"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/btn_0"
            android:text="0"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:onClick="onDigit"
            />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/btn_add"
            android:text="+"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:onClick="onDigit"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/btn_clear"
            android:text="<-"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:onClick="onDigit"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/btn_0"
            android:text="0"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:onClick="onDigit"
            />

        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/btn_add"
            android:text="+"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:onClick="onDigit"
            />
        <Button
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/btn_clear"
            android:text="<-"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:onClick="onDigit"
            />
    </LinearLayout>

</LinearLayout>